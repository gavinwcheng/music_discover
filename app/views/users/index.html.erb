<% if @user %>
  <div id="welcome_box">
    Welcome,
    <% name = @user["display_name"].split(" ").first %>
    <%= link_to name, 'http://open.spotify.com/user/' + @user["id"], id:"name_link", :target => "_blank" %>
  </div>
<% end %>

<div class="central" id="logo_box">
  <div class="leaf_fill"></div>
  <div class="grape_fill" id="grape_0"></div>
  <div class="grape_fill" id="grape_1"></div>
  <div class="grape_fill" id="grape_2"></div>
  <div class="grape_fill" id="grape_3"></div>
  <div class="grape_fill" id="grape_4"></div>
  <div class="grape_fill" id="grape_5"></div>
  <div class="grape_fill" id="grape_6"></div>
  <div class="grape_fill" id="grape_7"></div>
  <img src="/images/cropped_grape_logo.png" id="index_logo">
    <div class="button_box" id="sign_in_box">
      <% if @user %>
        <%= link_to 'Generate a playlist', '/users/playlist', class:"link", id:"generate"%>
        <div class="button_divide"></div>
        <%= link_to 'Sign out', '/users/signout', class:"button_box link", id:"sign_out_index", method: :get%>
      <% else %>
        <%= link_to 'Sign in to Grape with Spotify', '/auth/spotify', class:"link", id:"sign_in"%>
      <% end %>
    </div>
</div>
